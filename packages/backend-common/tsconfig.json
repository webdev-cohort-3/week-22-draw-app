{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "NodeNext",              // ✅ ESM output
    "target": "ES2022",              // or higher
    "moduleResolution": "NodeNext",  // ✅ for correct resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": true
  },
  "include": ["src"]
}
